{% extends 'base.html.twig' %}

{% block body %}
    <h1>list</h1>

    <table>
        <tbody>
        <tr>
            <th>N° Reservation (id)</th>
            <td>{{ reservation.id }}</td>
        <tr/>
        <tr>
            <th>N° Flight (id)</th>
            <td>{{ flight.id }}</td>
        </tr>
        <tr>
            <th>Reservation's seat</th>
            <td>{{ reservation.nbReservedSeats }}</td>
        </tr>
        <tr>
            <th>Flight's departure</th>
            <td>{{ flight.departure }}</td>
        </tr>
        <tr>
            <th>Flight's arrival</th>
            <td>{{ flight.arrival }}</td>
        </tr>
        {% if flight.pilot.role == 'Pilot' %}
        <tr>
            <th>Pilot</th>
            <td>{{ flight.pilot }}</td>
        </tr>
        {% endif %}
        <tr>
            <th>Plane model</th>
            <td>{{ planeModel.model }}</td>
        </tr>
        <tr>
            <td>Cruise speed</td>
            <td>{{ planeModel.cruiseSpeed }}</td>
        </tr>
        <tr>
            <td>Flight's description</td>
            <td>{{ flight.description  }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="/">Return to homepage</a>
        </li>
    </ul>

{% endblock %}
